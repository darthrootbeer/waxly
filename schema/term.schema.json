{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vinyl-lexicon.com/schema/term.schema.json",
  "title": "Vinyl Lexicon Term",
  "description": "Schema for validating vinyl lexicon term front-matter",
  "type": "object",
  "required": [
    "term",
    "slug",
    "pos",
    "summary",
    "updated"
  ],
  "properties": {
    "term": {
      "type": "string",
      "description": "The canonical name of the term",
      "minLength": 1,
      "maxLength": 100
    },
    "slug": {
      "type": "string",
      "description": "URL-friendly unique identifier",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 1,
      "maxLength": 100
    },
    "pos": {
      "type": "string",
      "description": "Part of speech",
      "enum": [
        "noun",
        "verb",
        "adjective",
        "adverb",
        "preposition",
        "conjunction",
        "interjection",
        "phrase",
        "abbreviation",
        "acronym"
      ]
    },
    "aliases": {
      "type": "array",
      "description": "Alternative names or spellings",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "uniqueItems": true
    },
    "aka": {
      "type": "array",
      "description": "Also known as - alternate terms for the same concept",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "uniqueItems": true
    },
    "tags": {
      "type": "array",
      "description": "Categorization tags",
      "items": {
        "type": "string",
        "enum": [
          "equipment",
          "pressing",
          "mastering",
          "dj-related",
          "collecting",
          "quality-control",
          "slang",
          "technical",
          "historical",
          "cultural",
          "genre-specific",
          "regional",
          "obsolete",
          "modern"
        ]
      },
      "uniqueItems": true
    },
    "domains": {
      "type": "array",
      "description": "Technical or cultural domains",
      "items": {
        "type": "string",
        "enum": [
          "pressing_technique",
          "mastering",
          "quality_control",
          "equipment",
          "dj_technique",
          "collecting",
          "market",
          "cultural",
          "historical",
          "regional"
        ]
      },
      "uniqueItems": true
    },
    "regions": {
      "type": "array",
      "description": "Geographic usage areas",
      "items": {
        "type": "string",
        "enum": [
          "US",
          "UK",
          "JA",
          "DE",
          "FR",
          "IT",
          "ES",
          "CA",
          "AU",
          "BR",
          "MX",
          "global"
        ]
      },
      "uniqueItems": true
    },
    "eras": {
      "type": "array",
      "description": "Time periods when term was/is used",
      "items": {
        "type": "string",
        "enum": [
          "1940s",
          "1950s",
          "1960s",
          "1970s",
          "1980s",
          "1990s",
          "2000s",
          "2010s",
          "2020s",
          "modern"
        ]
      },
      "uniqueItems": true
    },
    "first_attested": {
      "type": "string",
      "description": "When the term was first documented",
      "pattern": "^(\\d{4}s?|\\d{4}-\\d{4}|modern|unknown)$"
    },
    "pronunciation": {
      "type": "string",
      "description": "Phonetic pronunciation guide",
      "pattern": "^/[^/]+/$"
    },
    "see_also": {
      "type": "array",
      "description": "Related terms for cross-referencing",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "uniqueItems": true
    },
    "sources": {
      "type": "array",
      "description": "Reference sources",
      "items": {
        "type": "object",
        "required": ["label"],
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "description": "Brief one-sentence definition",
      "minLength": 10,
      "maxLength": 200
    },
    "updated": {
      "type": "string",
      "description": "Last update date in ISO format",
      "format": "date"
    },
    "popularity": {
      "type": "integer",
      "description": "Current usage popularity (1-10 scale)",
      "minimum": 1,
      "maximum": 10
    },
    "complexity": {
      "type": "string",
      "description": "User skill level required",
      "enum": [
        "beginner",
        "intermediate",
        "advanced",
        "expert"
      ]
    },
    "status": {
      "type": "string",
      "description": "Term lifecycle status",
      "enum": [
        "active",
        "archaic",
        "obsolete",
        "revived"
      ]
    },
    "context": {
      "type": "string",
      "description": "Usage context or style",
      "enum": [
        "formal",
        "informal",
        "slang",
        "technical",
        "jargon"
      ]
    },
    "verification": {
      "type": "string",
      "description": "Accuracy verification status",
      "enum": [
        "verified",
        "unverified",
        "contested",
        "needs_research"
      ]
    },
    "equipment_association": {
      "type": "array",
      "description": "Related equipment categories",
      "items": {
        "type": "string",
        "enum": [
          "turntable",
          "tonearm",
          "cartridge",
          "stylus",
          "mixer",
          "amplifier",
          "speaker",
          "pressing_plant",
          "mastering",
          "quality_control",
          "accessories"
        ]
      },
      "uniqueItems": true
    },
    "genres": {
      "type": "array",
      "description": "Discogs-style genre classification (1-3 typically)",
      "items": {
        "type": "string",
        "enum": [
          "all",
          "Blues",
          "Brass & Military",
          "Children's",
          "Classical",
          "Electronic",
          "Folk, World, & Country",
          "Funk / Soul",
          "Hip Hop",
          "Jazz",
          "Latin",
          "Non-Music",
          "Pop",
          "Reggae",
          "Rock",
          "Stage & Screen"
        ]
      },
      "uniqueItems": true,
      "maxItems": 3
    },
    "styles": {
      "type": "array",
      "description": "Discogs-style sub-genre classification (1-6 typically)",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "uniqueItems": true,
      "maxItems": 6
    },
    "decade": {
      "type": "string",
      "description": "Primary decade of usage",
      "enum": [
        "1940s",
        "1950s",
        "1960s",
        "1970s",
        "1980s",
        "1990s",
        "2000s",
        "2010s",
        "2020s"
      ]
    },
    "user_rating": {
      "type": "number",
      "description": "Community quality rating (1-5 stars)",
      "minimum": 1,
      "maximum": 5
    },
    "contributor": {
      "type": "string",
      "description": "Primary contributor or author",
      "minLength": 1,
      "maxLength": 100
    },
    "discussion": {
      "type": "string",
      "description": "Community discussion or notes",
      "maxLength": 1000
    },
    "media": {
      "type": "array",
      "description": "Associated media files",
      "items": {
        "type": "object",
        "required": ["type", "url"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["image", "audio", "video", "diagram"]
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "alt": {
            "type": "string",
            "description": "Alt text for accessibility"
          }
        }
      }
    },
    "bibliography": {
      "type": "array",
      "description": "Academic or reference sources",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "author": {
            "type": "string",
            "maxLength": 100
          },
          "year": {
            "type": "integer",
            "minimum": 1900,
            "maximum": 2030
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "translation": {
      "type": "array",
      "description": "Translations and equivalents",
      "items": {
        "type": "object",
        "required": ["language", "term"],
        "properties": {
          "language": {
            "type": "string",
            "enum": ["es", "fr", "de", "it", "ja", "pt", "ru", "zh"]
          },
          "term": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "notes": {
            "type": "string",
            "maxLength": 200
          }
        }
      }
    },
    "usage_notes": {
      "type": "string",
      "description": "Important usage information or warnings",
      "maxLength": 500
    },
    "technical_specs": {
      "type": "object",
      "description": "Technical specifications for equipment/packaging terms",
      "properties": {
        "dimensions": {
          "type": "string",
          "description": "Physical dimensions",
          "maxLength": 200
        },
        "materials": {
          "type": "array",
          "description": "Materials used in construction",
          "items": {
            "type": "string",
            "maxLength": 100
          },
          "uniqueItems": true
        },
        "manufacturing_process": {
          "type": "string",
          "description": "How the item is manufactured",
          "maxLength": 500
        },
        "cost_impact": {
          "type": "string",
          "description": "Impact on production cost",
          "maxLength": 200
        }
      }
    },
    "historical_timeline": {
      "type": "object",
      "description": "Historical timeline of the term or concept",
      "properties": {
        "introduction_year": {
          "type": "string",
          "description": "Year or decade when introduced",
          "pattern": "^(\\d{4}s?|\\d{4}|unknown)$"
        },
        "peak_usage_era": {
          "type": "string",
          "description": "When the term/concept was most popular",
          "maxLength": 100
        },
        "decline_era": {
          "type": "string",
          "description": "When usage began declining",
          "maxLength": 100
        },
        "revival_era": {
          "type": "string",
          "description": "When it was revived or came back",
          "maxLength": 100
        },
        "notable_examples": {
          "type": "array",
          "description": "Famous or significant examples",
          "items": {
            "type": "string",
            "maxLength": 200
          }
        }
      }
    },
    "cultural_impact": {
      "type": "object",
      "description": "Cultural significance and collector information",
      "properties": {
        "collector_value": {
          "type": "string",
          "description": "Value to collectors",
          "enum": [
            "none",
            "low",
            "moderate",
            "high",
            "very_high",
            "varies"
          ]
        },
        "rarity_factor": {
          "type": "string",
          "description": "How rare or common this is",
          "enum": [
            "very_common",
            "common",
            "uncommon",
            "rare",
            "very_rare",
            "varies"
          ]
        },
        "condition_sensitivity": {
          "type": "string",
          "description": "How sensitive to condition for value",
          "enum": [
            "low",
            "moderate",
            "high",
            "very_high"
          ]
        },
        "preservation_notes": {
          "type": "string",
          "description": "How to preserve or care for this",
          "maxLength": 500
        }
      }
    },
    "relationships": {
      "type": "object",
      "description": "Enhanced relationships between concepts",
      "properties": {
        "parent_concept": {
          "type": "string",
          "description": "Broader parent concept (slug)",
          "pattern": "^[a-z0-9-]+$"
        },
        "child_concepts": {
          "type": "array",
          "description": "More specific child concepts (slugs)",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "uniqueItems": true
        },
        "requires": {
          "type": "array",
          "description": "Concepts that this requires (slugs)",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "uniqueItems": true
        },
        "enables": {
          "type": "array",
          "description": "Concepts that this enables (slugs)",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "uniqueItems": true
        },
        "conflicts_with": {
          "type": "array",
          "description": "Concepts that conflict with this (slugs)",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "uniqueItems": true
        }
      }
    },
    "usage_context": {
      "type": "object",
      "description": "When and how to use this term or concept",
      "properties": {
        "primary_use_cases": {
          "type": "array",
          "description": "Main scenarios where this applies",
          "items": {
            "type": "string",
            "maxLength": 200
          }
        },
        "secondary_use_cases": {
          "type": "array",
          "description": "Less common but valid uses",
          "items": {
            "type": "string",
            "maxLength": 200
          }
        },
        "avoid_when": {
          "type": "array",
          "description": "When NOT to use this",
          "items": {
            "type": "string",
            "maxLength": 200
          }
        },
        "best_practices": {
          "type": "array",
          "description": "Recommended practices",
          "items": {
            "type": "string",
            "maxLength": 200
          }
        }
      }
    },
    "quality_indicators": {
      "type": "object",
      "description": "Quality and condition assessment factors",
      "properties": {
        "grading_factors": {
          "type": "array",
          "description": "What to look for when grading",
          "items": {
            "type": "string",
            "maxLength": 200
          }
        },
        "common_defects": {
          "type": "array",
          "description": "Typical problems or defects",
          "items": {
            "type": "string",
            "maxLength": 200
          }
        },
        "restoration_possible": {
          "type": "boolean",
          "description": "Whether restoration is possible"
        },
        "authenticity_marks": {
          "type": "array",
          "description": "Markers of authenticity",
          "items": {
            "type": "string",
            "maxLength": 200
          }
        }
      }
    },
    "market_data": {
      "type": "object",
      "description": "Commercial and market information",
      "properties": {
        "price_premium": {
          "type": "string",
          "description": "Typical price premium or range",
          "maxLength": 200
        },
        "market_demand": {
          "type": "string",
          "description": "Current market demand level",
          "enum": [
            "very_low",
            "low",
            "moderate",
            "high",
            "very_high",
            "varies"
          ]
        },
        "investment_potential": {
          "type": "string",
          "description": "Potential as investment",
          "enum": [
            "poor",
            "fair",
            "good",
            "excellent",
            "varies"
          ]
        },
        "reproduction_quality": {
          "type": "string",
          "description": "Quality of modern reproductions",
          "maxLength": 200
        }
      }
    },
    "advanced_search": {
      "type": "object",
      "description": "Enhanced search and discovery fields",
      "properties": {
        "search_keywords": {
          "type": "array",
          "description": "Additional search terms",
          "items": {
            "type": "string",
            "maxLength": 100
          },
          "uniqueItems": true
        },
        "related_artists": {
          "type": "array",
          "description": "Artists commonly associated with this term",
          "items": {
            "type": "string",
            "maxLength": 100
          },
          "uniqueItems": true
        },
        "related_labels": {
          "type": "array",
          "description": "Record labels commonly associated",
          "items": {
            "type": "string",
            "maxLength": 100
          },
          "uniqueItems": true
        }
      }
    },
    "visible_sections": {
      "type": "array",
      "description": "Override default visibility - specify additional sections to display for this term",
      "items": {
        "type": "string",
        "enum": [
          "technical_specs",
          "historical_timeline",
          "cultural_impact",
          "relationships",
          "usage_context",
          "quality_indicators",
          "market_data",
          "advanced_search",
          "pronunciation",
          "first_attested",
          "decade",
          "user_rating",
          "contributor",
          "discussion",
          "media",
          "bibliography",
          "translation",
          "usage_notes",
          "equipment_association",
          "genres",
          "styles"
        ]
      },
      "uniqueItems": true
    },
    "hidden_sections": {
      "type": "array",
      "description": "Override default visibility - specify sections to hide for this term",
      "items": {
        "type": "string",
        "enum": [
          "aliases",
          "tags",
          "domains",
          "regions",
          "eras",
          "see_also",
          "sources",
          "popularity",
          "complexity",
          "status",
          "context",
          "verification"
        ]
      },
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}
