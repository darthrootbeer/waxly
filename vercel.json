{
  "version": 2,
  "functions": {
    "api/functions/*.js": {
      "memory": 128,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/v1/term/(.*)", "dest": "/api/functions/term.js?slug=$1" },
    { "src": "/v1/terms", "dest": "/api/functions/terms.js" },
    { "src": "/v1/search", "dest": "/api/functions/search.js" },
    { "src": "/v1/random", "dest": "/api/functions/random.js" }
  ]
}
